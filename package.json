{
  "name": "chrondle",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --incremental",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:unit": "vitest run -c vitest.config.unit.ts",
    "test:unit:watch": "vitest -c vitest.config.unit.ts",
    "test:integration": "vitest run -c vitest.config.integration.ts",
    "test:integration:watch": "vitest -c vitest.config.integration.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "update-metadata": "node scripts/update-puzzle-metadata.mjs",
    "validate-puzzles": "node scripts/validate-puzzles.mjs",
    "migrate-events": "node scripts/migrateEvents.mjs",
    "test-module-system": "node scripts/test-module-system.mjs",
    "bundle-analysis": "ANALYZE=true pnpm build",
    "size": "size-limit",
    "prepare": "husky",
    "clean": "rm -rf .next node_modules/.cache tsconfig.tsbuildinfo",
    "clean:next": "rm -rf .next tsconfig.tsbuildinfo",
    "clean:dev": "pnpm clean:next && pnpm dev",
    "fresh": "pnpm clean && pnpm install && pnpm dev",
    "check-cache": "node scripts/check-cache-age.mjs",
    "predev": "node scripts/check-cache-age.mjs || true",
    "events": "tsx scripts/manage-events.ts",
    "deploy:verify": "node scripts/verify-deployment.mjs",
    "deploy:check-migration": "node scripts/check-migration-needed.mjs",
    "deploy:migrate": "pnpm deploy:check-migration && pnpm migrate-events || echo 'Migration not needed'",
    "deploy": "convex deploy && pnpm deploy:migrate && pnpm deploy:verify"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.24.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.2",
    "lucide-react": "^0.523.0",
    "motion": "^12.19.1",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "15.3.5",
    "@size-limit/preset-app": "11.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^1.6.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.2",
    "size-limit": "11.2.0",
    "tailwindcss": "^4",
    "ts-prune": "0.10.3",
    "tsx": "^4.20.3",
    "tw-animate-css": "1.3.4",
    "typescript": "^5",
    "unimported": "1.31.1",
    "vitest": "^1.6.0"
  }
}
